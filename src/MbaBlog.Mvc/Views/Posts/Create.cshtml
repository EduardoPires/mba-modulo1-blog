@model MbaBlog.Domain.Domain.Post

@{
    ViewData["Title"] = "Novo Post";
}

<h4>Novo Post</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" maxlength="80" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Texto" class="control-label"></label>
                <textarea asp-for="Texto" type="Text" class="form-control" rows="10" wrap="soft" maxlength="1500"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group align-bottom pt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" /> | 
                <a asp-action="Index"><input type="button" value="Voltar ao Inicio" class="btn btn-secondary" size="5" /></a>
            </div>
            <input type="hidden" asp-for="CriadoEm" value=@DateTime.Now class="form-control">
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
