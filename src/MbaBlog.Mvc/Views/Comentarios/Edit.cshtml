@model MbaBlog.Domain.Domain.ComentarioPost

<h4>Alterar comentario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <textarea asp-for="Comentario" type="Text" class="form-control" rows="10" wrap="soft"></textarea>
                <span asp-validation-for="Comentario" class="text-danger"></span>
                <input type="hidden" asp-for="PostId" />
                <input type="hidden" asp-for="AutorId" />
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group col-md-12 pt-2">
                <input type="submit" value="Salvar" class="btn btn-primary" /> | 
                <a href='javascript:history.go(-1)'><input type="button" value="Voltar" class="btn btn-secondary" /></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
